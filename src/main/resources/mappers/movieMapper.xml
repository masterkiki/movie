<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.pks.movie.movie.dao.MovieDAO">
	<insert id="addMovie" parameterType="map">
		INSERT INTO
			`movie`
		(
			`movietitle`
			, `genre`
			, `country`
			, `releasedate`
			, `director`
			, `imagePath`
			, `story`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{movietitle}
			, #{genre}
			, #{country}
			, #{releasedate}
			, #{director}
			, #{imagePath}
			, #{story}
			, now()
			, now()
		)
		
	</insert>
	
	<select id="selectMovie" parameterType="int" resultType="com.pks.movie.movie.model.Movie">
		SELECT
			`id`
			, `movietitle`
			, `genre`
			, `country`
			, `releasedate`
			, `director`
			, `imagePath`
			, `story`
			, `createdAt`
			, `updatedAt`
		FROM
			`movie`
	
	</select>
	
	<update id="updateAudience" parameterType="map">
		UPDATE
			`movie`
		SET
			`audience` =  audience + #{audience}
		WHERE
			`id` = #{movieId}
	</update>

		<select id="selectMovieById" parameterType="int" resultType="com.pks.movie.movie.model.MovieDetail">
		SELECT
			`id`
			, `movietitle`
			, `genre`
			, `country`
			, `releasedate`
			, `director`
			, `imagePath`
			, `story`
			, `createdAt`
			, `updatedAt`
		FROM
			`movie`
		WHERE
			`id` = #{movieId}
	
	</select>
</mapper>